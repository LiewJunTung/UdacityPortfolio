<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:background">@drawable/button_normal</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonStyleSpecial" parent="android:Widget.Holo.Button">
        <item name="android:background">@drawable/button_special</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolBarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/primary_text</item>
        <item name="android:actionMenuTextColor">@color/primary_text</item>
        <item name="android:textAppearanceLargePopupMenu">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>
